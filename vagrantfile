# -*- mode: ruby -*-
# vi: set ft=ruby :
 # config.vm.box = "bento/ubuntu-24.04"
 # config.vm.box_version = "202404.26.0"
VAGRANT_BOX         = "generic/ubuntu2204"
VAGRANT_BOX_VERSION = "4.3.4"
NUMBER_OF_NODES=2

Vagrant.configure(2) do |config|

  (1..NUMBER_OF_NODES).each do |iterator|

    # config.ssh.insert_key = false
    # config.ssh.private_key_path = "./.ssh/ansible"
    # config.vm.provision "file", source: "./.ssh/ansible.pub", destination: "~/.ssh/ansible"
    # config.vm.provision "shell", inline: <<-SHELL
    #   cat /home/vagrant/.ssh/ansible.pub >> /home/vagrant/.ssh/authorized_keys
    # SHELL

    config.vm.define "ansiblenode#{iterator}" do |node|

      # box  info
      node.vm.box=VAGRANT_BOX
      node.vm.box_check_update  = false
      # node.vm.box_version=VAGRANT_BOX_VERSION
      node.vm.hostname = "ansiblenode#{iterator}.lan.com"
      
      #box networking
      node.vm.network "private_network", ip: "172.17.17.10#{iterator}"

      #provider config
      # node.vm.provider "libvirt" do |libvirt|
      #   libvirt.memory  = 2048
      #   libvirt.nested  = true
      #   libvirt.cpus    = 3
      # end
      node.vm.provider "virtualbox" do |v|
        v.memory  = 2048
        v.cpus    = 2
        v.gui = false
      end

      node.vm.provision "shell", path: "./scripts/bootstrap.sh"

    end

  end

end
